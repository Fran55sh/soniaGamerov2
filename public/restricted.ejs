<!DOCTYPE html>
<html>
<% include ./ejs/restrictedhead %>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>



  <body class="restricted">
    <section class="crear-propiedad">
      <div class="propiedad">

        <h1>Crear Propiedad</h1>
        <form id="propiedadForm" style="display: grid; grid-template-columns: repeat(2, 1fr); grid-gap: 20px;">
          <div>
            <!-- Contenido de la primera sección -->
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" required><br><br>

            <label for="descripcion">Descripción:</label>
            <textarea id="descripcion" required></textarea><br><br>

            <label for="descripcioncorta">Descripción Corta:</label>
            <textarea id="descripcioncorta" required></textarea><br><br>

            <!-- Contenido de la segunda sección -->
            <label for="direccion">Direccion:</label>
            <textarea id="direccion" required></textarea><br><br>

            <label for="divisa">Divisa:</label>
            <textarea id="divisa" required></textarea><br><br>
          </div>
          <div>


            <label for="precio">Precio:</label>
            <input type="number" id="precio" required><br><br>

            <label for="mapa">Mapa:</label>
            <input type="text" id="mapa" required><br><br>

            <label for="esDestacado">Es destacado:</label>
            <input type="checkbox" id="esDestacado"><br><br>
            <label for="tipo">Tipo:</label>
            <select id="tipo" required>
              <option value="">Seleccione un tipo</option>
              <option value="Casa">Casa</option>
              <option value="Departamento">Departamento</option>
              <option value="Fideicomiso">Fideicomiso</option>
              <option value="Proyecto">proyProyectoecto</option>
              <option value="Local">Local</option>
            </select><br><br>
  
            <label for="condicion">Condición:</label>
            <select id="condicion" required>
              <option value="">Seleccione una condición</option>
              <option value="Venta">Venta</option>
              <option value="Alquiler">Alquiler</option>
            </select><br><br>

            <button type="submit">Crear</button>
          </div>
          <div>
            <!-- Contenido de la tercera sección -->
          </div>
        </form>

      </div>

      <!-- Dropdown modificar -->
      <div class="foto">
        <form style="display: flex; flex-direction: column;">
          <h2>Acciones</h2>
          <label for="propiedadIdFechas">Alquiler Temporal:</label>
          <select id="propiedadIdFechas" name="propiedadIdFechas">
          </select>


          <button style="margin-top: 10px;" id="btnPatch" type="submit">Modificar Propiedad</button>
         
          <button style="margin-top: 10px;" id="btnDelete" type="submit">Eliminar Propiedad</button>


        </form>


        <h1>Subir Fotos Propiedades</h1>

        <!-- Dropdown fotos propiedades -->
        <form id="fotosForm" enctype="multipart/form-data">
          <label for="propiedadId">Propiedad:</label>
          <select id="propiedadId" tables/ name="propiedadId">
          </select>
          <br>

          <label for="fotos">Fotos:</label>
          <input class="file-input" type="file" id="fotos" name="fotos" accept="image/*" multiple>
          <br>

          <input class="formButton" type="submit" value="Enviar">
        </form>
      </div>
    </section>


    <section class="crear-propiedad">
      <div class="propiedad-temoral">

        <h1>Crear Propiedad Temporal</h1>
        <form id="propiedadTemporalForm" method="POST"
          style="display: grid; grid-template-columns: repeat(3, 1fr); grid-gap: 20px;">
          <div>
            <!-- Primera columna -->
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombreDate" name="nombre" required><br><br>

            <label for="descripcion">Descripción:</label>
            <textarea id="descripcionDate" name="descripcion" required></textarea><br><br>

            <label for="descripcioncorta">Descripción Corta:</label>
            <textarea id="descripcioncortaDate" name="descripcioncorta" required></textarea><br><br>

            <label for="ciudad">Ciudad:</label>
            <input type="text" id="ciudad" name="ciudad" required><br><br>

            <label for="provincia">Provincia:</label>
            <input type="text" id="provincia" name="provincia" required><br><br>

            <label for="direccion">Dirección:</label>
            <input type="text" id="direccionDate" name="direccion" required><br><br>

            <label for="divisa">Divisa:</label>
            <input type="text" id="divisaDate" name="divisa" required><br><br>

            <label for="precio">Precio:</label>
            <input type="text" id="precioDate" name="precio" required><br><br>

            <label for="mapa">Mapa:</label>
            <input type="text" id="mapaDate" name="mapa" required><br><br>


          </div>
          <div>
            <!-- Segunda columna -->

            <label for="distanciaAlCentro">Distancia al Centro:</label>
            <input type="text" id="distanciaAlCentro" name="distanciaAlCentro" required><br><br>

            <label for="distanciaAlMar">Distancia al Mar:</label>
            <input type="text" id="distanciaAlMar" name="distanciaAlMar" required><br><br>
            <label for="wifi">Wifi:</label>
            <input type="checkbox" id="wifi" name="wifi"><br><br>

            <label for="tv">TV:</label>
            <input type="checkbox" id="tv" name="tv"><br><br>

            <label for="cochera">Cochera:</label>
            <input type="checkbox" id="cochera" name="cochera"><br><br>

            <label for="mascotas">Mascotas:</label>
            <input type="checkbox" id="mascotas" name="mascotas"><br><br>

            <label for="pileta">Pileta:</label>
            <input type="checkbox" id="pileta" name="pileta"><br><br>

            <label for="conBlanco">Con Blanco:</label>
            <input type="checkbox" id="conBlanco" name="conBlanco"><br><br>

            <label for="lavarropa">Lavarropa:</label>
            <input type="checkbox" id="lavarropa" name="lavarropa"><br><br>

            <label for="parrilla">Parrilla:</label>
            <input type="checkbox" id="parrilla" name="parrilla"><br><br>

            <label for="esDestacado">¿Es Destacado?:</label>
            <input type="checkbox" id="esDestacadoDate" name="esDestacado"><br><br>


          </div>
          <div>
            <!-- Tercera columna -->


            <label for="cantidadPersonas">Cantidad de Personas:</label>
            <input type="number" id="cantidadPersonas" name="cantidadPersonas" required><br><br>

            <label for="cantidadAmbientes">Cantidad de Ambientes:</label>
            <input type="number" id="cantidadAmbientes" name="cantidadAmbientes" required><br><br>

            <label for="reserva">Reserva: (en porcentaje)</label>
            <input type="number" id="reserva" name="reserva" required><br><br>

            <label for="diasMinimos">Dias de alquiler minimos:</label>
            <input type="number" id="diasMinimos" name="diasMinimos" required><br><br>

            <label for="plazo">Plazo para realizar la reserva: </label>
            <input type="number" id="plazo" name="plazo" required><br><br>

            <label for="titular">Titular:</label>
            <input type="text" id="titular" name="titular" required><br><br>

            <label for="alias">Alias:</label>
            <input type="text" id="alias" name="alias"><br><br>

            <label for="Cuenta">CBU:</label>
            <input type="text" id="Cuenta" name="Cuenta" required><br><br>
            <select id="tipoDate" required>
              <option value="">Seleccione un tipo</option>
              <option value="Casa">Casa</option>
              <option value="Departamento">Dapartamento</option>
              <option value="Fideicomiso">Fideicomiso</option>
              <option value="Proyecto">Proyecto</option>
              <option value="Local">Local</option>
            </select><br><br>
            <button type="submit">Crear Propiedad</button>

        </form>


      </div>
      </div>


      <div class="foto">

        <h2>Acciones</h2>
        <form id="myForm" style="display: flex; flex-direction: column;">
          <label for="propiedadDateIdFechas">Alquiler Temporal:</label>
          <select id="propiedadDateIdFechas" name="propiedadDateId">
            
          </select>
          <button style="margin-top: 10px;" id="btnPatchDate" type="submit">Modificar Propiedad</button>
          <button style="margin-top: 10px;" id="btnDeleteFecha" type="submit">Eliminar Fechas</button>
          <button style="margin-top: 10px;" id="btnDeleteDate" type="submit">Eliminar Propiedad</button>



          

          <h2 style="margin-top: 20px;">Asignar Disponibilidad</h2>
          <label for="inicio">Fecha de inicio:</label><br>
          <input type="date" id="inicio" name="inicio" required><br><br>

          <label for="fin">Fecha de fin:</label><br>
          <input type="date" id="fin" name="fin" required><br><br>
          <br>
          <input class="formButton" type="submit" value="Asignar">

        </form>

        <form style="margin-top: 20px;" id="fotosFormDate" enctype="multipart/form-data">
          <h2>Subir Fotos</h2>
          <label for="propiedadDateId">Propiedad:</label>
          <select id="propiedadDateId" name="propiedadDateId">
            <!-- Opciones de propiedades -->
          </select>
          <br>

          <label for="fotos">Fotos:</label>
          <input class="file-input" type="file" id="fotosDate" name="fotosDate" accept="image/*" multiple>
          <br>

          <input style="margin-top: 10px;" class="formButton" type="submit" value="Subir Fotos">
        </form>


    </section>

    <h2> Reservas Pendientes</h2>
    <section class="mostrarReservas" id="mostrarReservas">
      </div>
    </section>

  </body>

</html>


